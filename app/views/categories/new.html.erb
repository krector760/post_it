<%= render 'shared/content_title', title: "New Category" %>

<div class='well'>
	<%= render 'shared/content_error', :obj => @category %>
	<%= form_for @category do |f| %>
		<div class='control-group'>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<%= f.submit "Create Category", class: 'btn btn-success' %>
	<% end %>
</div>
